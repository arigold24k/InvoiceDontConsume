{
  "name": "invoicedontconsume",
  "productName": "invoicedontconsume",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-installer": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "invoicedontconsume",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/icons/win/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "installerIcon": "src/assets/icons/win/icon.ico",
      "uninstallerIcon": "src/assets/icons/win/icon.ico",
      "uninstallDisplayName": "Invoice Dont Consume",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": {
    "name": "Ariel Vidal",
    "email": "Ariel.m.vidal@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "invoicedontconsume"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "dotenv": "^9.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0",
    "oracledb": "^5.1.0",
    "path": "^0.12.7",
    "require": "^2.4.20",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.52",
    "@electron-forge/maker-deb": "6.0.0-beta.52",
    "@electron-forge/maker-rpm": "6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "6.0.0-beta.52",
    "@electron-forge/maker-zip": "6.0.0-beta.52",
    "electron": "13.6.6",
    "electron-builder": "^22.10.5"
  }
}
